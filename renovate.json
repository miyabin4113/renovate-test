{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "group:allNonMajor",
    "config:best-practices",
    ":disableRateLimiting"
  ],
  "enabledManagers": ["npm", "dockerfile", "github-actions"],
  "packageRules": [
    {
      "matchPackageNames": ["node"],
      "allowedVersions": "/[0-9]*[02468]([.-].*)?$/",
      "groupName": "node"
    }
  ]
}
